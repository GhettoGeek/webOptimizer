{
    "bin": {"webOptimizer": "taskRunner.compiled.js"},
    "dependencies": {
        "babel-cli": "*",
        "babel-eslint": "*",
        "babel-loader": "*",
        "babel-polyfill": "*",
        "babel-preset-es2015": "*",
        "babel-preset-stage-0": "*",
        "coffee-loader": "*",
        "coffee-script": "*",
        "css-loader": "*",
        "eslint": "*",
        "eslint-config-google": "*",
        "extract-loader": "0.0.2",
        "extract-text-webpack-plugin": "^1.0.1",
        "file-loader": "*",
        "html-loader": "*",
        "html-webpack-plugin": "*",
        "image-webpack-loader": "^1.6.3",
        "imports-loader": "^0.6.5",
        "jade": "*",
        "jade-html-loader": "*",
        "jsdom": "*",
        "less": "*",
        "less-loader": "*",
        "node-sass": "*",
        "offline-plugin": "*",
        "rimraf": "*",
        "sass-loader": "*",
        "url-loader": "*",
        "webpack": "*",
        "webpack-dev-server": "*",
        "webpack-load-plugins": "*"
    },
    "devDependencies": {"source-map-support": "*"},
    "description": "A generic web optimizer, (module) bundler and development environment.",
    "files": [
        "configurator.js",
        "taskRunner.js",
        "webpackConfigurator.js",
        "webpackTestConfigurator.js",
        "test.jade"
    ],
    "homepage": "http://torben.website/webOptimizer",
    "keywords": [
        "webpack", "optimizer", "configuration", "generic", "lint", "bundle"
    ],
    "license": "ISC",
    "main": "webpackConfigurator.compiled.js",
    "name": "webOptimizer",
    "repository": {
        "type": "git", "url": "https://github.com/thaibault/webOptimizer.git"
    },
    "scripts": {
        "clear": "rm *.compiled.* || true",
        "lint": "eslint '**/*.js' || true",
        "preinstall": "touch configurator.compiled.js taskRunner.compiled.js webpackTestConfigurator.compiled.js webpackConfigurator.compiled.js",
        "postinstall": "arguments='--presets es2015 --source-maps inline --out-file' && babel configurator.js $arguments configurator.compiled.js && babel webpackConfigurator.js $arguments webpackConfigurator.compiled.js && babel webpackTestConfigurator.js $arguments webpackTestConfigurator.compiled.js && babel taskRunner.js $arguments taskRunner.compiled.js"
    },
    "version": "1.0.0",
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 7,
            "sourceType": "module",
            "impliedStrict": true,
            "ecmaFeatures": {}
        },
        "parser": "babel-eslint",
        "extends": "google",
        "rules": {
            "semi": [2, "never"],
            "curly": [2, "multi"],
            "indent": [2, 4],
            "block-scoped-var": 0,
            "spaced-comment": [2, "always", {"line": {"exceptions": [
                "/usr/bin/env node"
            ]}}],
            "new-cap": 0
        },
        "env": {"shared-node-browser": true}
    },
    "configuration": {
        "default": {
            "debug": false,
            "library": true,
            "path": {
                "source": "source/",
                "target": "build/",
                "asset": {
                    "source": {"__execute__": "self.path.source"},
                    "target": {"__execute__": "self.path.target"},
                    "cascadingStyleSheet": "cascadingStyleSheet/",
                    "javaScript": "javaScript/",
                    "coffeeScript": "coffeeScript/",
                    "less": "less/",
                    "scss": "scss/",
                    "sass": "sass/",
                    "font": "font/",
                    "image": "image/",
                    "template": "template/",
                    "data": "data/"
                },
                "manifest": "manifest.appcache"
            },
            "hashAlgorithm": "md5",
            "maximumInPlaceFileLimitInByte": 262144,
            "developmentTool": null,
            "internalInjects": [],
            "externalInjects": [],
            "moduleAliases": {},
            "knownExtensions": [
                "",

                ".js", ".coffee", "coffee.md", ".litcoffee",

                ".html", ".jade",

                ".css", ".scss", ".sass", ".less",

                ".png", ".jpg", ".ico", ".gif"
            ],
            "inPlace": {
                "cascadingStyleSheet": true,
                "javaScript": false
            },
            "commandLineArguments": {
                "webpack": {
                    "__execute__": "`--config ${webOptimizerPath}/webpackConfigurator.compiled.js --progress --display-chunks --display-reasons --display-error-details`"
                },
                "webpackDevServer": {
                    "__execute__": "`--config ${webOptimizerPath}/webpackConfigurator.compiled.js --open --inline --colors`"
                },
                "webpackDevServerTest": {
                    "__execute__": "`--config ${webOptimizerPath}/webpackTestConfigurator.compiled.js --open --inline --colors`"
                },
                "eslint": {
                    "__execute__": "`--config ${webOptimizerPath}/package.json --ignore-pattern '${self.path.target.substring(currentPath.length + 1)}**' '**/*.js'`"
                }
            },
            "developmentServer": {
                "contentBase": {"__execute__": "self.path.source"},
                "historyApiFallback": true,
                "stats": {"colors": true}
            },
            "offline": {
                "caches": "all",
                "scope": "/",
                "updateStrategy": "hash",
                "version": 0,
                "ServiceWorker": {"output": "javaScript/serviceWorker.js"},
                "AppCache": {"directory": "/"},
                "excludes": [{
                    "__execute__": "`*.map?${self.hashAlgorithm}=*`"
                }]
            },
            "files": {
                "html": [
                    {
                        "debug": false,
                        "template": {
                            "__execute__": "`html?${global.JSON.stringify(self.html)}!jade-html?${global.JSON.stringify(self.preprocessor.jade)}!${self.path.source}index.jade`"
                        },
                        "hash": true,
                        "filename": "index.html",
                        "inject": "body",
                        "minify": {"collapseWhitespace": true}
                    }
                ],
                "cascadingStyleSheet": {
                    "__execute__": "`cascadingStyleSheet/main.css?${self.hashAlgorithm}=[contenthash]`"
                },
                "javaScript": {
                    "__execute__": "`javaScript/main.js?${self.hashAlgorithm}=[hash]`"
                }
            },
            "preprocessor": {
                "jade": {
                    "pretty": false,
                    "debug": false,
                    "includeManifest": {"__execute__": "!!self.offline"}
                },
                "sass": {"indentedSyntax": true},
                "scss": {},
                "modernJavaScript": {
                    "cacheDirectory": true,
                    "presets": ["es2015", "stage-0"]
                }
            },
            "html": {"attrs": "img:src link:href"},
            "cascadingStyleSheet": {},
            "optimizer": {
                "uglifyJS": {"compress": {"warnings": false}},
                "image": {
                    "file": {
                        "limit": {
                            "__execute__": "self.maximumInPlaceFileLimitInByte"
                        },
                        "name": {
                            "__execute__": "`image/[name].[ext]?${self.hashAlgorithm}=[hash]`"
                        }
                    },
                    "content": {
                        "optimizationLevel": 7,
                        "bypassOnDebug": false,
                        "verbose": false
                    }
                },
                "font": {
                    "eot": {
                        "limit": {"__execute__": "self.maximumInPlaceFileLimitInByte"},
                        "name": {
                            "__execute__": "`font/[name].[ext]?${self.hashAlgorithm}=[hash]`"
                        }
                    },
                    "woff": {
                        "limit": {"__execute__": "self.maximumInPlaceFileLimitInByte"},
                        "name": {
                            "__execute__": "`font/[name].[ext]?${self.hashAlgorithm}=[hash]`"
                        }
                    },
                    "ttf": {
                        "limit": {"__execute__": "self.maximumInPlaceFileLimitInByte"},
                        "mimetype": "application/octet-stream",
                        "name": {
                            "__execute__": "`font/[name].[ext]?${self.hashAlgorithm}=[hash]`"
                        }
                    },
                    "svg": {
                        "limit": {"__execute__": "self.maximumInPlaceFileLimitInByte"},
                        "mimetype": "image/svg+xml",
                        "name": {
                            "__execute__": "`font/[name].[ext]?${self.hashAlgorithm}=[hash]`"
                        }
                    }
                }
            },
            "test": {"modules": ["test/"], "moduleAliases": {}}
        },
        "debug": {
            "debug": true,
            "developmentTool": "#source-map",
            "offline": null,
            "files": {"html": [{"debug": true, "template": true}]},
            "preprocessor": {"jade": {
                "pretty": true,
                "debug": true,
                "includeManifest": false
            }},
            "optimizer": {
                "uglifyJS": null,
                "image": {"content": {"bypassOnDebug": true, "verbose": true}}
            }
        },
        "library": {
            "path": {
                "source": "./",
                "asset": {
                    "source": {"__execute__": "self.path.source"},
                    "target": {"__execute__": "self.path.target"},
                    "cascadingStyleSheet": "./",
                    "javaScript": "./",
                    "coffeeScript": "./",
                    "less": "./",
                    "scss": "./",
                    "sass": "./",
                    "font": "./",
                    "image": "./",
                    "template": "./",
                    "data": "./"
                }
            }
        }
    }
}
